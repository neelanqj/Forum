@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <h2>Recent Posts</h2>
        @foreach(Post post in Model)
        {
            @post.Details.Substring(0,Math.Min(10,post.Details.Length))
            @:<br /><hr/><br/>
        }
    </div>
    <div class="col-md-3">
    </div>
</div>
